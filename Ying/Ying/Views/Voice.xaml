<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ying.Voice"
             Title="Speak"
             Icon="ic_settings_voice.png">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="takephoto" Text="Take Photo" Clicked="takephoto_clicked"></Button>
            <Button x:Name="pickupphoto" Text="Pickup Photo" Clicked="pickupphoto_clicked"></Button>
            <Image x:Name="corpimage" HeightRequest="100" WidthRequest="100"></Image>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
