<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ying.Photo"
             Title="Picture"
             Icon="ic_photo_camera.png">
 <ContentPage.Content>
 <StackLayout Orientation="Vertical">
     <!-- photo buttons -->
       <StackLayout  Orientation="Horizontal"  >
                <Button x:Name="takephoto"   Text ="Take Picture"  Image="ic_photo_camera.png" HorizontalOptions="StartAndExpand" Clicked="takephoto_clicked" />
                <Button x:Name="pickupphoto"       Text ="Pickup Picture"      Image="ic_photo_library.png" HorizontalOptions="EndAndExpand"  Clicked="pickupphoto_clicked" />
        </StackLayout>
     <!-- crop image -->
     <Image x:Name="corpimage" HeightRequest="50" WidthRequest="50" HorizontalOptions="Center" IsVisible="False"></Image>
     <!-- indicator -->
     <ActivityIndicator x:Name="indicator"   IsRunning="False"   IsVisible="False"   Color="Gray" HorizontalOptions="Center" />
                <!--default Chinese to Text-->
     <StackLayout Orientation="Horizontal" Padding="0,5,0,0">
                <Label x:Name="chinesetoeng" Text="Detect Chinese" HorizontalOptions="StartAndExpand" TextColor="Black"></Label>
                <Switch x:Name="useDefaults" IsToggled="False" HorizontalOptions="Center"></Switch>
                <Label x:Name="engtochinese" Text="Detect English" HorizontalOptions="EndAndExpand" TextColor="Black"></Label>
            </StackLayout>
                <!-- Google text dection -->
                <StackLayout  Orientation="Horizontal"    >
                <Button x:Name="textdection"   Text ="Text Dection"  Image="ic_cloud.png" HorizontalOptions="StartAndExpand" Clicked="takephoto_clicked" />
                <Button x:Name="readoriginaltext"       Text ="Read Original Text"      Image="ic_settings_voice.png"  HorizontalOptions="EndAndExpand" Clicked="pickupphoto_clicked" />

      </StackLayout>
     <!-- textfrompicture -->  
      <Editor x:Name="TextLabel"
            Text="Text detected from picture will show here"
            TextColor="Black"
            HeightRequest="140"  />
     <StackLayout  Orientation="Horizontal"  Padding="0,5,0,0">
                <Button x:Name="translate"       Text ="Translate"      Image="ic_translate.png" HorizontalOptions="StartAndExpand" Clicked="pickupphoto_clicked" />
                <Button x:Name="readtranstext"       Text ="Read Translated Text"      Image="ic_settings_voice.png" HorizontalOptions="EndAndExpand"  Clicked="pickupphoto_clicked" />
     </StackLayout>
     <!-- text for translated text -->
     <Editor x:Name="TransLabel"
              Text="Translated text will show here"   
              TextColor="Black"
              HeightRequest="140"/>
   </StackLayout>


</ContentPage.Content>
</ContentPage>